<Window x:Class="B3ArduinoControler.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B3ArduinoControler"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None" Background="#D8FFFFFF" Topmost="True" KeyDown="Manipulate_KeyDown" KeyUp="Manipulate_KeyUp">
    <Grid>
        <GroupBox Header="状態">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Connect : " Width="100"/>
                    <TextBlock x:Name="TextBlock_IsConnect" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="KeyBord : " Width="100"/>
                    <TextBlock x:Name="TextBlock_Keyborad" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="UserName : " Width="100"/>
                    <TextBlock x:Name="TextBlock_UserName" Width="100"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
